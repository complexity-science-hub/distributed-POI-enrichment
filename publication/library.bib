doi = {10.1161/CIRCULATIONAHA.111.052753},
file = {:Users/geoheil/Dropbox/phd/lib/Coogan et al/Circulation/Coogan et al. - 2012 - Air pollution and incidence of hypertension and diabetes mellitus in black women living in Los Angeles.pdf:pdf},
issn = {00097322},
journal = {Circulation},
keywords = {Air pollution,Diabetes mellitus,Epidemiology,Hypertension},
