doi = {10.1007/s40471-018-0140-5},
file = {:Users/geoheil/Dropbox/phd/lib/Kim et al/Current Epidemiology Reports/Kim et al. - 2018 - Ambient and Traffic-Related Air Pollution Exposures as Novel Risk Factors for Metabolic Dysfunction and Type 2 Diabe.pdf:pdf},
